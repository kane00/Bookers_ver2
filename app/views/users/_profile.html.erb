<!-- 左側プロフィール、ひとつのプロット -->
<table class="table">
		<tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", size:'100x100' %></tr>

		<tr>
			<!-- 名前 -->
			<th>name</th>
			<th><%= current_user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= current_user.introduction %></th>
		</tr>
</table>

<div class="row">
	<!-- glyphicon glyphicon-wrenchがアイコン　btn btn-default以外にもbtn btn-linkとかで見た目変えられる -->
	<%= link_to '',edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
</div>
