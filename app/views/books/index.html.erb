<!-- エラーメッセージ表示 -->
<% if @book.errors.any? %>
    <div id="error_explanation">
    	<font color="red">
	        <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
    	    <ul>
        	    <% @book.errors.full_messages.each do |msg| %>
            	    <li><%= msg %></li>
            	<% end %>
        	</ul>
        </font>
    </div>
<% end %>

<div class="row">
	<!-- 左3つ分 -->
	<div class="col-xs-3">
		<h2>User info</h2>
		<!-- プロフィール,画像部分 -->
		<%= render 'users/profile', user: current_user %>

		<!-- 新規投稿 -->
		<h2>New book</h2>
		<!-- <(23~37行目)%= render 'books/newform', user: current_user %>へ変更も可  -->
		<%= form_for(@book) do |f| %>
			<!-- タイトル記入 -->
			<div class="field row">
				<%= f.label :title %>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
			</div>
			<!-- 本文記入 -->
			<div class="field row">
				<%= f.label :body, "Opinion" %>
				<%= f.text_area :body, class: "col-xs-12 book_body" %>
			</div>

			<div class="actions row">
				<!-- btn btn-primaryがbootstanpのボタン -->
				<%= f.submit class: "col-xs-12 btn btn-primary" %>
			</div>
		<% end %>
	</div>

	<!-- 右9つ分 -->
	<div class="col-xs-9">
		<h2>Books<!--index--></h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<!-- 見出し表示 -->
				<tr>
					<th class="col-xs-2"></th>
					<th class="col-xs-4">Title</th>
					<th class="col-xs-4">Opinion</th>
					<th class="col-xs-1"></th>
				</tr>
			</thead>
			<!-- 本文表示(全ユーザ) -->
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<!-- プロフィール画像 -->
							<%= link_to(book.user) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpg', fallback: "no_image.jpg", size:'30x30' %>
							<% end %>
						</td>
						<!-- 本のタイトル -->
						<td>
							<%= link_to book.title, book, class: "book_#{book.id}" %>
						</td>
						<td>
							<!-- 本の内容 -->
							<%= book.body %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-md-9 ml-auto"></div>
	<p>©︎CopyRight Infratop.inc</p>
</div>